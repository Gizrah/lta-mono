{
	"singleQuote": true,
	"trailingComma": "all",
	"printWidth": 100,
	"useTabs": true,
	"tabWidth": 4,
	"semi": false,
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "auto",
	"overrides": [
		{
			"files": ["*.yaml", "*.yml"],
			"options": {
				"tabWidth": 2,
				"useTabs": false,
				"singleQuote": false
			}
		}
	]
}
